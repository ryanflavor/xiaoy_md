# Production Environment Configuration
# Copy to .env for production deployment

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# NATS Production Settings
NATS_VERSION=2.10.14
NATS_CONTAINER_NAME=nats-prod
NATS_COMMAND=-c /etc/nats/nats-server.conf
NATS_CONFIG=./config/nats-server.conf
NATS_CLIENT_PORT=4222
NATS_MONITOR_PORT=8222
NATS_CLUSTER_PORT=6222
NATS_URL=nats://nats:4222
NATS_USER=produser
NATS_PASSWORD=changeme_strong_password
NATS_CLUSTER_ID=market-data-cluster
NATS_CLIENT_ID=market-data-service-1
NATS_LOG_LEVEL=info

# Service Production Settings
SERVICE_IMAGE=ghcr.io/xiaoy/market-data-service:latest
SERVICE_CONTAINER_NAME=market-data-service-prod
DEV_SOURCE_MOUNT=
SOURCE_MOUNT=./logs

# Production Resource Limits
SERVICE_CPU_LIMIT=2
SERVICE_MEMORY_LIMIT=2G
SERVICE_CPU_RESERVE=1
SERVICE_MEMORY_RESERVE=1G

# Monitoring
METRICS_PORT=7777
EXPORTER_VERSION=0.14.0

# Docker Settings
RESTART_POLICY=always
NETWORK_NAME=market-data-prod-net
NATS_VOLUME_NAME=market-data-nats-prod-volume